<script type="text/javascript">
    $(document).ready(function(){
     
        $('.category').click(function(){
            var category=  $(this).attr("id");
            $.ajax({
               url : '<?php echo $this->url(array('controller' => 'business', 'action' => 'findskills'), 'default', true); ?>',
               data :'category='+category,
                type : 'POST',
                success : function(responseText){
                    $('#skills').html(responseText);
                }
            });
        })
        $('.checkbox').live("click", function(){
            var skills=  $(this).attr("id");
            if($(this).is(":checked")) {
                $.ajax({
                    url : '<?php echo $this->url(array('controller' => 'business', 'action' => 'putskills'), 'default', true); ?>',
                    data :'skills='+skills,
                    type : 'POST',
                    success : function(responseText){
                        $('#skillsselected').append(responseText);
                    }
                });
            } else {
                
            }

        
        });
          
    });

</script>
