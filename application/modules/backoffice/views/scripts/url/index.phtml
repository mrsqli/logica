                <td><?php echo $this->escape($url->params); ?></td>
                <td><?php echo $this->escape($url->isStatic); ?></td>
                <td><?php echo $this->escape($url->metaKeywords); ?></td>
                <td><?php echo $this->escape($url->metaDescription); ?></td>
                <td>  
                    <a href="<?php echo $this->url(array('controller' => 'url', 'action' => 'edit', 'id' => $url->urlAliasId)); ?>">
                        <img src="/images/icons/fff/pencil.png"/></a>
                    <a href = "<?php echo $this->url(array('controller' => 'url', 'action' => 'delete', 'id' => $url->urlAliasId)); ?>">
                        <img src="/images/icons/fff/cross.png"/></a></td>
            </tr>
        <?php endforeach; ?>
    </table>
</div>