// render the default listing
$helper = $this->listingUtilities((array) $this->config);
?>

<div class="data-table-header clearfix">
    <h1><?php $helper->pageTitle(); ?></h1>
    <?php if ($helper->canShowAddButton() && $helper->canAdd()): ?>
        <a class="button" href="<?php $helper->addUrl(); ?>">Add new url</a>
    <?php endif; ?>    
</div>


<div class="data-table">
    <table class="tablesorter">
        <thead>
            <tr>
                <th>Source</th>
                <th>Alias</th>
                <th>Params</th>
                <th>isStatic</th>
                <th>metaKeywords</th>
                <th>metaDescription</th>
                <th>Action</th>
            </tr>
        </thead>
        <?php foreach ($this->url as $url) : ?>

            <tr>
                <td><?php echo $this->escape($url->source); ?></td>
